<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Rich store inventory</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <nav>
        <h2>Rich store inventory</h2>
        <div class="navDiv">
          <a href="/"><p>Home</p></a>
          <a href="/assets">All assets</a>
          <a href="/assets/tables">Edit tables</a>
        </div>
      </nav>
    <hr>
    <form action="/assets/search" method="GET">
        <label for="search">Search item: </label>
        <div>
          <input type="text" id="search" name="search">
          <button type="submit">Search</button>
       </div>
    </form>
    <table>
        <tr>
            <th>Name</th>
            <th>Color</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Address</th>
            <th>Action</th>
        </tr>
        <% assets.map((asset) => { %>
            <tr>
                <td><%= asset.name %></td>
                <td><%= asset.color %></td>
                <td><%= asset.price %></td>
                <td><%= asset.quantity %></td>
                <td><%= asset.address %></td>
                <td>
                    <form style="display: inline" action="/assets/tables/delete/asset" method="POST">
                      <input value="<%= asset.id%>" name="id" style="display: none;"/>
                      <button type="submit" style="display: inline;">Delete</button>
                    </form>
                </td>
            </tr>
        <% }) %> 
    </table>
</body>
</html>